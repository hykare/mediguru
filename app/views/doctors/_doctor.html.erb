<a href=<%= doctor_path(doctor) %> class="block mb-2 px-6 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 dark:bg-gray-800/80 dark:border-gray-600 dark:hover:bg-gray-800">
   
    <div class="flex gap-4 items-center">

      <div class="mr-3 text-sm rounded-full md:mr-0">
        <img class="w-10 h-10 bg-gray-100 rounded-full" src="https://aui.atlassian.com/aui/8.8/docs/images/avatar-person.svg" alt="user photo">
      </div>

      <div>
        <p class="mb-1 text-xl font-bold tracking-tight text-gray-800 dark:text-white">
          <%= doctor.full_name %>
        </p>

        <%# stars %>
        <div class="flex gap-1 items-center inline">
          <span class="mb-0.5 bg-gray-100 dark:bg-gray-700 rounded-md px-2 font-normal text-gray-700 dark:text-gray-400">
            <%= doctor.specialty.name %>
          </span>
          <svg aria-hidden="true" class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Rating star</title><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
          <p class="mr-2 text-sm font-bold text-gray-900 dark:text-white"><%= doctor.reviews.average(:score) %></p>
          <span class="text-sm font-medium text-gray-500 underline hover:no-underline dark:text-white"><%= doctor.reviews.count %> opinii</span>
        </div>
      </div>
    </div>
</a>
