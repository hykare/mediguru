<!DOCTYPE html>
<html class="">
  <head>
    <title>Mediguru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css" rel="stylesheet" />
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <div>
      <p>
        <%= link_to 'MEDIGURU', root_path %>
      </p>
      <% if patient_signed_in? %>
        <p> Signed in as <b>
          <%= current_patient.first_name %></b>
        </p>
        <%= link_to 'konto', patient_path(current_patient) %>
        <%= link_to 'moje wizyty', patient_appointments_path %>
        <%= link_to 'wyloguj', destroy_patient_session_path, data: { turbo_method: :delete } %>
      <% else %>
        <%= link_to 'sign in', new_patient_session_path %>
      <% end %>
    </div>

    <%= yield %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>
  </body>
</html>
