<!DOCTYPE html>
<html>
  <head>
    <title>Mediguru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div>
      <p>
        <%= link_to 'MEDIGURU', root_path %>
      </p>
      <% if patient_signed_in? %>
        <p> Signed in as <b>
          <%= current_patient.first_name %></b>
        </p>
        <%= link_to 'konto', patient_path(current_patient) %>
        <%= link_to 'moje wizyty', appointments_path %>
        <%= link_to 'wyloguj', destroy_patient_session_path, data: { turbo_method: :delete } %>
      <% else %>
        <%= link_to 'sign in', new_patient_session_path %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
