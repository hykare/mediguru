<div class="block w-full mb-2 px-10 py-6 pb-8 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700 text-gray-800 dark:text-white">

  <%= form_with url: reviews_path, scope: :review do |form| %>
    <%= form.hidden_field :patient_id, value: current_patient&.id %>
    <%= form.hidden_field :doctor_id, value: doctor.id %>

    <%= form.label :body, 'Wystaw opiniÄ™ o tym lekarzu',
      class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
    %>
    <%= form.text_area :body, rows: 5,
      class: "block resize-none p-2.5 mb-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
      placeholder: 'Twoja opinia...'
    %>

    <div class="flex justify-between">

      <div class="flex items-center gap-1">
        <%= select_tag :score, options_for_select(1..10), name: 'review[score]',
          class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        %>
        <svg aria-hidden="true" class="w-7 h-7 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Rating star</title><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
      </div>

      <%= form.submit 'Wystaw opiniÄ™', 
        class: "text-white bg-teal-400 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      %>

    </div>
  <% end %>

</div>